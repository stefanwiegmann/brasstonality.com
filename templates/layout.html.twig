{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset('css/brasstonality-dark.css') }}" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />
    <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/miles-dutch-white180x180.png?') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/miles-dutch-white32x32.png?') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/miles-dutch-white16x16.png?') }}">
    <link rel="mask-icon" href="{{ asset('images/miles-dutch-white.svg') }}" color="#343a40">

{% endblock stylesheets %}

{% block body %}

    {% block nav %}
        {% embed "nav-dark.html.twig" %}{% endembed %}
    {% endblock nav %}

    {% block alert %}
        {% embed "alert.html.twig" %}{% endembed %}
    {% endblock alert %}

    <div id="main">
        {% block main %}

            <div class="row"><!-- main row -->

                <div class="col-sm-2"><!-- left menu column -->

                    {% block menuBlock %}
                        <div class="card my-3" id="menuBlock">

                            <div class="card-header">
                                {% block menuTitle %}menuTitle{% endblock menuTitle %}
                            </div>

                            <ul class="nav flex-column">
                                {% block menuContent %}
                                    <li class="nav-item active"><a class="nav-link" href="#">menuContent A</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#">menuContent B</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#">menuContent C</a></li>
                                {% endblock menuContent %}
                            </ul>

                        </div><!-- menuBlock -->
                    {% endblock menuBlock %}

                    {% block filterBlock %}
                        <div class="card my-3" id="filterBlock">

                            <div class="card-header">
                                {% block filterTitle %}filterTitle{% endblock filterTitle %}
                            </div>

                            <div class="card-body">
                                {% block filterContent %}filterContent{% endblock filterContent %}
                            </div>

                        </div><!-- filterBlock -->
                    {% endblock filterBlock %}

                </div><!-- left menu column -->

                <div class="col-sm-10"><!-- right content column -->

                    {% block pageHeader %}
                        <div class="row" id="pageHeader">

                            <!-- page title column -->
                            <div class="col-sm-6">
                                <div class="h2">
                                    {% block pageTitle %}pageTitle{% endblock pageTitle %}
                                </div>
                            </div>

                            <!-- page menu column -->
                            <div class="col-sm-6 text-right">
                                {% block pageMenu %}pageMenu{% endblock pageMenu %}
                            </div>

                        </div><!-- pageHeader -->
                    {% endblock pageHeader %}

                    <div class="container-fluid" id="content">
                        {% block content %}content{% endblock content %}
                    </div>

                </div><!-- right content column -->

            </div><!-- main row -->

        {% endblock main %}
    </div><!-- main -->

    {% block footer %}
        {% embed "footer.html.twig" %}{% endembed %}
    {% endblock footer %}

{% endblock body %}
